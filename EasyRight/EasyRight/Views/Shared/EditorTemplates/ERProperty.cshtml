@model EasyRight.Models.ERProperty
@{
    Layout = null;
}

<ul>
    <li>@this.Model.Name</li>
    <li>
        <div class="hidden">
            @Html.EditorFor(x => x.Name)
            @Html.EditorFor(x=>x.TemplateName)
        </div>

        @if(this.Model.TemplateName.Contains("DateTime"))
        {
            @Html.EditorFor(x =>x.Value, "DateTime", null)
        }
        else
        {
            @Html.EditorFor(x =>x.Value, this.Model.TemplateName, null)
        }
    </li>

</ul>
